<Window x:Class="LibManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LibManager" Height="350" Width="566">
    <Grid>
        <ListView Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ファイル名" Width="100"/>
                    <GridViewColumn Header="フォルダ" Width="100"/>
                    <GridViewColumn Header="ライブラリ名" Width="100"/>
                    <GridViewColumn Header="バージョン" Width="100"/>
                    <GridViewColumn Header="更新日付" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
